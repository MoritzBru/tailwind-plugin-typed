{
  "name": "tailwind-plugin-typed",
  "description": "A plugin for Tailwind CSS to generate text typing animations.",
  "version": "0.8.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoritzBru/tailwind-plugin-typed.git"
  },
  "author": {
    "name": "Moritz Brunnengr√§ber",
    "email": "mail@moritz-brunnengraeber.de"
  },
  "license": "MIT",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "plugin",
    "css",
    "animation",
    "typing",
    "typewriter"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "dev": "vite build --watch & vite serve .",
    "build": "vite build",
    "lint": "eslint .",
    "publint": "publint .",
    "prepublishOnly": "npm run build",
    "changelog": "changelog --format markdownlint --release $(npm pkg get version | xargs) --create",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin": "^4.0.1",
    "@types/node": "^22.13.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "keep-a-changelog": "^2.6.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "publint": "^0.3.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.0"
  }
}
